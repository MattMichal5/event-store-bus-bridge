{
    "name": "prooph/event-store-bus-bridge",
    "description": "Marry CQRS with Event Sourcing",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "http://getprooph.org/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.codeliner.ws/"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        }
    ],
    "keywords": [
        "CQRS",
        "EventSourcing",
        "prooph"
    ],
    "require": {
        "php": "^7.1",
        "prooph/common" : "4.0.x-dev",
        "prooph/service-bus" : "6.0.x-dev",
        "prooph/event-store" : "7.0.x-dev"
    },
    "require-dev": {
        "container-interop/container-interop": "^1.1",
        "phpunit/phpunit": "^5.7",
        "phpspec/prophecy": "dev-patch-1 as 1.6.2",
        "friendsofphp/php-cs-fixer": "^1.12.2",
        "satooshi/php-coveralls": "^1.0",
        "tobiju/bookdown-bootswatch-templates": "^0.2.0",
        "malukenho/docheader": "^0.1.4"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventStoreBusBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\EventStoreBusBridge\\": "tests/",
            "ProophTest\\ServiceBus\\": "vendor/prooph/service-bus/tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/prolic/prophecy.git"
        }
    ]
}
